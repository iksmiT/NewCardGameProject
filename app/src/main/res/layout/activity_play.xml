<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="timski_ensicaen.newcardgameproject.PlayActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="192dp"
        android:scaleType="fitCenter"
        android:id="@+id/image_view_one"
        android:layout_above="@+id/pick_from_one"
        android:layout_alignLeft="@+id/pick_from_one"
        android:src="@drawable/ace_of_clubs_w720"
        />
        <!--  -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="192dp"
        android:scaleType="fitCenter"
        android:id="@+id/image_view_discard"
        android:layout_below="@+id/pick_from_discard"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="192dp"
        android:scaleType="fitCenter"
        android:id="@+id/image_view_two"
        android:layout_above="@+id/pick_from_two"
        android:layout_alignRight="@+id/pick_from_two"
        android:src="@drawable/ace_of_clubs_w720"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PICK DECK ONE"
        android:id="@+id/pick_from_one"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PICK DISCARD"
        android:id="@+id/pick_from_discard"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PICK DECK TWO"
        android:id="@+id/pick_from_two"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE P1: "
        android:id="@+id/score_one_text"
        android:layout_above="@+id/text_one"
        android:layout_alignParentStart="true"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE P2: "
        android:id="@+id/textView"
        android:layout_above="@+id/text_two"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/score_one_text"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_one"
        android:text="TEXT ONE"
        android:layout_above="@+id/image_view_one"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_two"
        android:text="TEXT TWO"
        android:layout_alignTop="@+id/text_one"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pick_from_discard"
        android:layout_centerHorizontal="true"
        android:text="Next Turn"
        android:id="@+id/next_turn_button"/>


</RelativeLayout>
