<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="timski_ensicaen.newcardgameproject.PlayActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="192dp"
        android:scaleType="fitCenter"
        android:id="@+id/image_view_one"
        android:layout_above="@+id/pick_from_one"
        android:layout_alignLeft="@+id/pick_from_one"
        android:src="@drawable/ace_of_clubs_w720"
        />
        <!--  -->
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="192dp"
        android:scaleType="fitCenter"
        android:id="@+id/image_view_two"
        android:layout_above="@+id/pick_from_two"
        android:layout_alignRight="@+id/pick_from_two"
        android:src="@drawable/ace_of_clubs_w720"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER ONE"
        android:id="@+id/pick_from_one"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER TWO"
        android:id="@+id/pick_from_two"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P1 "
        android:id="@+id/score_one_text"
        android:textSize="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P2 "
        android:id="@+id/score_two_text"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/score_one_text"
        android:textSize="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_one"
        android:text="TEXT ONE"
        android:layout_below="@+id/score_one_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_two"
        android:text="TEXT TWO"
        android:layout_below="@+id/score_two_text"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Next Round"
        android:id="@+id/next_turn_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_text"
        android:text="PLAYER X WINS"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="60dp"
        android:textAlignment="center" />


</RelativeLayout>
